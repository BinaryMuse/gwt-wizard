<?xml version="1.0" encoding="utf-8" ?>
<project name="gwt-wizard" default="build" basedir=".">
    <!-- Arguments to gwtc and devmode targets -->
    <property environment="env" /> <!-- used for getting GWT path -->

    <path id="project.class.path">
        <pathelement location="${env.GWTPATH}/gwt-user.jar"/>
        <fileset dir="${env.GWTPATH}" includes="gwt-dev*.jar"/>
    </path>

    <target name="build" description="Compile source">
        <mkdir dir="bin"/>
        <javac srcdir="src" includes="**" encoding="utf-8"
          destdir="bin"
          source="1.6" target="1.6" nowarn="false"
          debug="true" debuglevel="lines,vars,source">
            <classpath refid="project.class.path"/>
        </javac>
        <copy todir="bin">
            <fileset dir="src" />
        </copy>
    </target>

    <target name="jar" description="Package into JAR" depends="build">
        <jar destfile="gwt-wizard.jar" basedir="bin" compress="true" />
    </target>

    <target name="clean" description="Cleans the project">
        <delete dir="out" failonerror="false" />
    </target>
</project>
